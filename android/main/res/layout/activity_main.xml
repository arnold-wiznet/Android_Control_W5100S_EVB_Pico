<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/current_mode"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:gravity="center"

        android:textSize="70sp" />

    <TextView
        android:id="@+id/T2"
        android:layout_width="1265dp"
        android:layout_height="66dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="689dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="46dp"
        android:gravity="center"
        android:text="None"
        android:textSize="30sp" />

    <com.ekn.gruzer.gaugelibrary.ArcGauge
        android:id="@+id/arcGauge"
        android:layout_width="362dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="198dp"
        android:layout_marginEnd="113dp" />

    <com.ekn.gruzer.gaugelibrary.HalfGauge
        android:id="@+id/halfGauge"
        android:layout_width="362dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="487dp"
        android:layout_marginEnd="106dp" />

    <EditText
        android:id="@+id/humidity"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="335dp"
        android:ems="10"
        android:inputType="text"
        android:text="Relative Humidity (%)"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/humidity2"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="405dp"
        android:layout_marginEnd="490dp"
        android:layout_marginBottom="330dp"
        android:ems="10"
        android:inputType="text"
        android:text="HCHO conc. (ppb)"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/Temperature"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="808dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="617dp"
        android:ems="10"
        android:inputType="text"
        android:text="Temperature (°C)" />

    <FrameLayout
        android:id="@+id/bulbContainer"
        android:layout_width="371dp"
        android:layout_height="318dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="888dp"
        android:background="@color/grey"
        android:padding="16dp"
        android:stateListAnimator="@animator/pop_down_animator">

        <ImageButton
            android:id="@+id/lightButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@color/grey"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/bulb_off"


            />


    </FrameLayout>

    <com.ekn.gruzer.gaugelibrary.HalfGauge
        android:id="@+id/halfGauge2"
        android:layout_width="362dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="489dp"
        android:layout_marginEnd="497dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="°C/°F"
        />

</RelativeLayout>